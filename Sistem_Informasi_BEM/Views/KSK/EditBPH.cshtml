@model Sistem_Informasi_BEM.Models.trlaporanksk


@using (Html.BeginForm("EditBPH", "KSK", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>trlaporanksk</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.idlpksk)

        <div class="form-group">
            <label style="font-weight: bold;">Revisi<b style="color: red">*</b></label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.komentar, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.komentar, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.modiby, new { @class = "form-control", @Value = Request.IsAuthenticated ? HttpContext.Current.User.Identity.Name : "" })
            </div>
        </div>

        
        <div class="form-group">
            <label style="font-weight: bold;">Berkas<b style="color: red">*</b></label>
            <div class="col-md-10">
                <input type="file" name="files" id="files" multiple="multiple" value="@Html.DisplayFor(model => model.namaberkas)" class="btn btn-info" style="min-width:100%; height:45px; padding: 10px 10px; font-size: 12pt;" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
