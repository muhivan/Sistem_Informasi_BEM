@model Sistem_Informasi_BEM.Models.trlaporanksk

@{
    ViewBag.Title = "Ubah Data";
}
<div class="polman-nav-static-top">
    <div id="iconmenu" class="fa fa-bars fa-2x polman-adjust2" style="margin-right: 15px; cursor: pointer;" aria-hidden="true" onclick="hidemenu();"></div>
    <div class="float-left polman-adjust2">
        <img src="~/Picture/SIBEM.png" style="height: 50px;" />
    </div>
    <div class="polman-menu">
        <nav class="nav justify-content-end" style="padding-top: 0px;">
            <div class="fa fa-user-circle-o fa-10x" style="margin-top: 8px; margin-right: 15px; cursor: pointer;" aria-hidden="true"></div>
            <b style="font-size: 18px; float: right">@(Request.IsAuthenticated? HttpContext.Current.User.Identity.Name : "") (@ViewBag.Jabatan) <br />@ViewBag.Departemen </b>
        </nav>
    </div>
</div>

<div class="polman-nav-static-right collapse scrollstyle" id="menu">
    <div id="accordion" role="tablist" aria-multiselectable="true">
        <div class="list-group">
            <a onclick="location.href='@Url.Action("Index", "Login")'" class="list-group-item list-group-item-action" style="border-radius: 0px; border: none; padding-left: 23px;"><i class="fa fa-sign-out fa-lg fa-pull-left"></i>Logout</a>
            <a onclick="location.href='@Url.Action("MenuPIC","Login")'" class="list-group-item list-group-item-action" style="border-radius: 0px; border: none; padding-left: 23px;"><i class="fa fa-home fa-lg fa-pull-left"></i>Dashboard</a>
            <a onclick="location.href='@Url.Action("ProfilAnggotaPIC","Login")'" class="list-group-item list-group-item-action" style="border-radius: 0px; border: none; padding-left: 23px;">Profil Anggota</a>
            <a href='#menu7' role='tab' class='list-group-item list-group-item-action' data-toggle='collapse' data-parent='#accordion' aria-expanded='true' aria-controls='menu7' style="border-radius: 0px; border: none; padding-left: 23px;"><i class='fa fa-chevron-down fa-lg fa-pull-left'></i>Menu</a>
            <div id='menu7' class='collapse in' role='tabpanel'>
                <a onclick="location.href='@Url.Action("Index","PengajuanOSP")'" class="list-group-item list-group-item-action active" style="border-radius: 0px; border: none; padding-left: 47px; display: inherit;">
                    <b class='fa fa-file-excel-o fa-lg fa-pull-left'>&nbsp;&nbsp;</b>Pengajuan OSP
                </a>
                <a onclick="location.href='@Url.Action("Index","PengajuanDana")'" class="list-group-item list-group-item-action " style="border-radius: 0px; border: none; padding-left: 47px; display: inherit;">
                    <b class="fa fa-file-text-o fa-lg fa-pull-left">&nbsp;&nbsp;</b>Pengajuan Dana
                </a>
                <a onclick="location.href='@Url.Action("Index", "Kas")'" class="list-group-item list-group-item-action " style="border-radius: 0px; border: none; padding-left: 47px; display: inherit;">
                    <b class='fa fa-money fa-lg fa-pull-left'>&nbsp;</b>Kas
                </a>
            </div>
        </div>
    </div>
</div>

<H3>Pengajuan SOP</H3>
<ol class="breadcrumb polman-breadcrumb">
    <li class="breadcrumb-item"><a onclick="location.href='@Url.Action("MenuPIC","Login")'">Sistem Informasi BEM</a></li>
    <li class="breadcrumb-item"><a onclick="location.href='@Url.Action("Index","PengajuanOSP")'">OSP</a></li>
    <li class="breadcrumb-item">Ubah</li>
</ol>
<hr />

@using (Html.BeginForm("Edit", "PengajuanOSP", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div id="allcontent" class="polman-adjust5" style="margin-left: 0px;">
        <div id="MainContent_panelAdd">
            <div class="card">
                <div class="card-header"></div>
                <div class="card-block">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                @Html.HiddenFor(model => model.idlpksk)
                                <label style="font-weight: bold;" for="addNamaKegiatanENG">Tanggal Present <b style="color: red">*</b></label>
                                @Html.EditorFor(model => model.tglpresent, new { htmlAttributes = new { @class = "form-control", @style = "min-width: 100%; height:50px; font-size: 15pt;" } })
                                @Html.ValidationMessageFor(model => model.tglpresent, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.modiby, new { @class = "form-control", @Value = Request.IsAuthenticated ? HttpContext.Current.User.Identity.Name : "" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label style="font-weight: bold;">Berkas Pengajuan<b style="color: red">*</b></label>
                                <input type="file" name="files" id="files" multiple="multiple" class="btn btn-info" style="min-width:100%; height:45px; padding: 10px 10px; font-size: 12pt;" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <a href="@Url.Action("Index", "PengajuanOSP", "")" class="btn btn-default" style="padding: 15px 40px; font-size: 12pt;">Kembali</a>
            <input type="submit" value="Simpan" class="btn btn-primary" style="padding: 15px 40px; font-size: 12pt;" />
        </div>
    </div>
}

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
            window.onload = function () {
            alert("@ViewBag.Message");
        }
    </script>
}

<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />


