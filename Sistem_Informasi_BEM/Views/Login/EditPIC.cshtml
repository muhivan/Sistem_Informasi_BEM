@model Sistem_Informasi_BEM.Models.msanggotabem

@{
    ViewBag.Title = "Ubah Data";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/theme/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/theme/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/theme/jquery-ui.min.css" rel="stylesheet" />
    <link rel="shortcut icon" href="~/Picture/Logo_BEM.png" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/jquery.fancybox.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-select.min.css" rel="stylesheet" />
    <link href="~/Content/Style.css" rel="stylesheet" />
</head>
<body>
    <div class="container body-content">
        <div class="polman-nav-static-top">
            <div id="iconmenu" class="fa fa-bars fa-2x polman-adjust2" style="margin-right: 15px; cursor: pointer;" aria-hidden="true" onclick="hidemenu();"></div>
            <div class="float-left polman-adjust2">
                <img src="~/Picture/SIBEM.png" style="height: 50px;" />
            </div>
            <div class="polman-menu">
                <nav class="nav justify-content-end" style="padding-top: 0px;">
                    <div class="fa fa-user-circle-o fa-10x" style="margin-top: 8px; margin-right: 15px; cursor: pointer;" aria-hidden="true"></div>
                    <b style="font-size: 18px; float: right">@(Request.IsAuthenticated? HttpContext.Current.User.Identity.Name : "") (@ViewBag.Jabatan) <br />@ViewBag.Departemen </b>
                </nav>
            </div>
        </div>

        <div class="polman-nav-static-right collapse scrollstyle" id="menu">
            <div id="accordion" role="tablist" aria-multiselectable="true">
                <div class="list-group">
                    <a onclick="location.href='@Url.Action("Index", "Login")'" class="list-group-item list-group-item-action" style="border-radius: 0px; border: none; padding-left: 23px;"><i class="fa fa-sign-out fa-lg fa-pull-left"></i>Logout</a>
                    <a onclick="location.href='@Url.Action("MenuPIC","Login")'" class="list-group-item list-group-item-action" style="border-radius: 0px; border: none; padding-left: 23px;"><i class="fa fa-home fa-lg fa-pull-left"></i>Dashboard</a>
                    <a onclick="location.href='@Url.Action("ProfilAnggotaPIC","Login")'" class="list-group-item list-group-item-action active" style="border-radius: 0px; border: none; padding-left: 23px;">Profil Anggota</a>
                    <a href='#menu7' role='tab' class='list-group-item list-group-item-action' data-toggle='collapse' data-parent='#accordion' aria-expanded='true' aria-controls='menu7' style="border-radius: 0px; border: none; padding-left: 23px;"><i class='fa fa-chevron-down fa-lg fa-pull-left'></i>Menu</a>
                    <div id='menu7' class='collapse in' role='tabpanel'>
                        <a onclick="location.href='@Url.Action("Index","PengajuanOSP")'" class="list-group-item list-group-item-action " style="border-radius: 0px; border: none; padding-left: 47px; display: inherit;">
                            <b class='fa fa-file-excel-o fa-lg fa-pull-left'>&nbsp;&nbsp;</b>Pengajuan OSP
                        </a>
                        <a onclick="location.href='@Url.Action("Index","PengajuanDana")'" class="list-group-item list-group-item-action " style="border-radius: 0px; border: none; padding-left: 47px; display: inherit;">
                            <b class="fa fa-file-text-o fa-lg fa-pull-left">&nbsp;&nbsp;</b>Pengajuan Dana
                        </a>
                        <a onclick="location.href='@Url.Action("Index", "Kas")'" class="list-group-item list-group-item-action " style="border-radius: 0px; border: none; padding-left: 47px; display: inherit;">
                            <b class='fa fa-money fa-lg fa-pull-left'>&nbsp;</b>Kas
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <ol class="breadcrumb polman-breadcrumb">
            <li class="breadcrumb-item"><a href="" data-toggle="tooltip" data-placement="bottom">Sistem Informasi BEM</a></li>
            <li class="breadcrumb-item">Foto Profil</li>
            <li class="breadcrumb-item">Ubah</li>
        </ol>
        <hr />

        @using (Html.BeginForm("EditPIC", "Login", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div id="allcontent" class="polman-adjust5" style="margin-left: 0px;">
                <div id="MainContent_panelAdd">
                    <div class="card">
                        <div class="card-header">
                            <span id="MainContent_labelTitleAdd" style="font-weight:bold;">Ubah Anggota BEM</span>
                        </div>
                        <div class="card-block">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        @Html.HiddenFor(model => model.idanggota)
                                        <label style="font-weight: bold;">Nama Anggota <b style="color: red">*</b></label>
                                        @Html.EditorFor(model => model.nama, new { htmlAttributes = new { @class = "form-control", @style = "min-width: 100%; height:50px; font-size: 15pt; text-transform:uppercase" } })
                                        @Html.ValidationMessageFor(model => model.nama, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label style="font-weight: bold;">No Telepone <b style="color: red">*</b></label>
                                        @Html.EditorFor(model => model.no_telp, new { htmlAttributes = new { @class = "form-control", @style = "min-width: 100%; height:50px; font-size: 15pt;" } })
                                        @Html.ValidationMessageFor(model => model.no_telp, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label style="font-weight: bold;">NIM <b style="color: red">*</b></label>
                                        @Html.EditorFor(model => model.nim, new { htmlAttributes = new { @class = "form-control", @style = "min-width: 100%; height:50px; font-size: 15pt;" } })
                                        @Html.ValidationMessageFor(model => model.nim, "", new { @class = "text-danger" })
                                        @Html.Hidden("cek_nim", Model.nim, new { @id = "cek_nim" })
                                    </div>
                                    <div class="form-group">
                                        <label style="font-weight: bold;">Jabatan <b style="color: red">*</b></label>
                                        @Html.DropDownList("idjabatan", null, htmlAttributes: new { @class = "form-control", @style = "min-width: 100%; height:50px; font-size: 15pt;" })
                                        @Html.ValidationMessageFor(model => model.idjabatan, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label style="font-weight: bold;">Email <b style="color: red">*</b></label>
                                        @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control", @style = "min-width: 100%; height:50px; font-size: 15pt;" } })
                                        @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                                        @Html.Hidden("cek_email", Model.email, new { @id = "cek_email" })
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label style="font-weight: bold;">Periode <b style="color: red">*</b></label>
                                        @Html.DropDownList("idperiode", null, htmlAttributes: new { @class = "form-control dropdown", @style = "min-width: 100%; height:50px; font-size: 15pt;" })
                                        @Html.ValidationMessageFor(model => model.idperiode, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label style="font-weight: bold;">Alamat <b style="color: red">*</b></label>
                                        @Html.EditorFor(model => model.alamat, new { htmlAttributes = new { @class = "form-control", @style = "min-width: 100%; height:50px; font-size: 15pt;" } })
                                        @Html.ValidationMessageFor(model => model.alamat, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label style="font-weight: bold;" for="addNamaKegiatanENG">Departemen <b style="color: red">*</b></label>
                                        @Html.DropDownList("iddepartemen", null, htmlAttributes: new { @class = "form-control", @style = "min-width: 100%; height:50px; font-size: 15pt; " })
                                        @Html.ValidationMessageFor(model => model.iddepartemen, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        @Html.HiddenFor(model => model.modiby, new { @class = "form-control", @Value = Request.IsAuthenticated ? HttpContext.Current.User.Identity.Name : "" })
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label style="font-weight: bold;" for="addNamaKegiatanENG">Foto <b style="color: red">*</b></label>
                                        <input type="file" id="imgfile" name="imgfile" class="btn btn-info" style="min-width:100%; height:45px; padding: 10px 10px; font-size: 12pt;" />
                                        @Html.ValidationMessageFor(model => model.foto, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br />
                    <a href="@Url.Action("ProfilAnggotaPIC", "Login", "")" class="btn btn-secondary" style="padding: 15px 40px; font-size: 12pt;">Kembali</a>
                    <input type="submit" value="Simpan" class="btn btn-primary" style="padding: 15px 40px; font-size: 12pt;" />
                </div>
            </div>
        }
        @if (ViewBag.Message != null)
        {
            <script type="text/javascript">
        window.onload = function () {
        alert("@ViewBag.Message");
        }
            </script>
        }

    </div>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Content/theme/jquery-1.12.4.min.js"></script>
    <script src="~/Content/theme/bootstrap.min.js"></script>
    <script src="~/Content/theme/jquery.validate.min.js"></script>
    <script src="~/Content/theme/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Content/theme/jquery-ui-1.12.1.min.js"></script>
    <script src="~/Content/theme/notify.min.js"></script>
</body>
</html>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
