@model IEnumerable<Sistem_Informasi_BEM.Models.msnew>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Ganti Password</title>
    <link rel="shortcut icon" href="~/Picture/Logo_BEM.png" />
    <!-- Custom fonts for this template-->
    <link href="~/Content/password/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="~/Content/password/sb-admin-2.min.css" rel="stylesheet">
</head>

<body style="background-image: url('../../Picture/IMG_Background.jpg'); background-repeat: no-repeat; background-size: cover;">
    <div class="navbar navbar-expand bg-white topbar mb-4 static-top" style="top:0;width: 100% !important;">
        <div class="float-left">
            <img src="~/Picture/SIBEM.png" style="height: 50px;" />
        </div>

        <div class="navbar-nav ml-auto">
            <div class="float-left">
                <a href="@Url.Action("Home", "Login")" class="btn btn-danger btn-user btn-block">Home</a>
            </div>
            <div class="float-left">
                &nbsp;&nbsp;
            </div>
            <div class="float-left">
                <a href="@Url.Action("Index", "Login")" class="btn btn-primary btn-user btn-block">Login</a>
            </div>
        </div>
    </div>

    @foreach (var item in Model)
    {
        if (item.gambar != "")
        {
            <div class="container" style="top:50px;">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0" >
                        <!-- Nested Row within Card Body -->
                        <div class="card shadow mb-4">
                            <div class="card-header py-3">
                                <h5 class="m-0 font-weight-bold text-primary text-center">@item.judul</h5>
                            </div>
                            <div class="card-body">
                                <div class="text-center">
                                    <img src="@Url.Content(item.gambar)" height="250" width="300" />
                                </div>
                                <br />
                                <p>
                                    @Html.Raw(item.deskripsi)
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }

    <link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Content/theme/designtablejava.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap.min.js"></script>

    <!-- Bootstrap core JavaScript-->
    <script src="~/Content/password/jquery.min.js"></script>
    <script src="~/Content/password/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/Content/password/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/Content/password/sb-admin-2.min.js"></script>
</body>
</html>

