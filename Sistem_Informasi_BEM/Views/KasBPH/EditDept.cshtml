@using (Html.BeginForm("EditDept", "KasBPH", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div id="allcontent" class="polman-adjust5" style="margin-left: 0px;">
        <div id="MainContent_panelAdd">
            <div class="card">
                <div class="card-header"></div>
                <div class="card-block">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                @Html.HiddenFor(model => model.idkas)
                                @Html.HiddenFor(model => model.idanggota, new { @class = "form-control", @Value = ViewBag.idanggota2 })
                                <label style="font-weight: bold;">Khas <b style="color: red">*</b></label>
                                <input type="text" id="nominal" name="nominal" value="@Model.nominal" class="priceformat form-control" style="min-width:100%; height:45px; padding: 10px 10px; font-size: 12pt;" />
                                @*@Html.EditorFor(model => model.nominal, new { htmlAttributes = new { @class = "form-control", @style = "min-width: 100%; height:50px; font-size: 15pt;" } })
                                @Html.ValidationMessageFor(model => model.nominal, "", new { @class = "text-danger" })*@
                                @Html.HiddenFor(model => model.modiby, new { @class = "form-control", @Value = Request.IsAuthenticated ? HttpContext.Current.User.Identity.Name : "" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label style="font-weight: bold;">Jenis Khas <b style="color: red">*</b></label>
                                <br />
                                @Html.RadioButtonFor(model => model.jeniskas, "Departemen", new { htmlAttributes = new { @class = "form-control" } })
                                Departemen
                                <br />
                                @Html.RadioButtonFor(model => model.jeniskas, "BEM", new { htmlAttributes = new { @class = "form-control" } })
                                BEM
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label style="font-weight: bold;" for="addNamaKegiatanENG">Upload Buki</label>
                                <input type="file" id="imgfile" name="imgfile" class="btn btn-info" style="min-width:100%; height:45px; padding: 10px 10px; font-size: 12pt;" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <span style="float: right">
                <a href="@Url.Action("Index", "KasBPH")" class="btn btn-default" style="padding: 15px 40px; font-size: 12pt;">Kembali</a>
                <input type="submit" value="Perbarui" class="btn btn-primary" style="padding: 15px 40px; font-size: 12pt;" />
            </span>
        </div>
    </div>
}

