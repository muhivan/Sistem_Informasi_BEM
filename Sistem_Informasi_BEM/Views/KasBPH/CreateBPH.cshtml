@using (Html.BeginForm("CreateBPH", "KasBPH", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div id="allcontent" class="polman-adjust5" style="margin-left: 0px;">
        <div id="MainContent_panelAdd">
            <div class="card">
                <div class="card-header"></div>
                <div class="card-block">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                @Html.HiddenFor(model => model.idanggota, new { @class = "form-control", @Value = ViewBag.idanggota2 })
                                <label style="font-weight: bold;">Khas <b style="color: red">*</b></label>
                                @*@Html.EditorFor(model => model.nominal, new { htmlAttributes = new { @class = "form-control", @style = "min-width: 100%; height:50px; font-size: 15pt;" } })*@
                                <input type="text" id="nominal" name="nominal" class="priceformat form-control" style="min-width:100%; height:45px; padding: 10px 10px; font-size: 12pt;" />
                                @*@Html.ValidationMessageFor(model => model.nominal, "", new { @class = "text-danger" })*@
                                @Html.HiddenFor(model => model.creaby, new { @class = "form-control", @Value = Request.IsAuthenticated ? HttpContext.Current.User.Identity.Name : "" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label style="font-weight: bold;">Jenis Khas <b style="color: red">*</b></label>
                                <br />
                                @Html.RadioButtonFor(model => model.jeniskas, "BPH", new { htmlAttributes = new { @class = "form-control" } })
                                BPH
                                <br />
                                @Html.RadioButtonFor(model => model.jeniskas, "BEM", new { htmlAttributes = new { @class = "form-control" } })
                                BEM
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label style="font-weight: bold;" for="addNamaKegiatanENG">Upload Buki</label>
                                <input type="file" id="imgfile" name="imgfile" class="btn btn-info" style="min-width:100%; height:45px; padding: 10px 10px; font-size: 12pt;" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <span style="float:right">
                <a href="@Url.Action("IndexBPH", "KasBPH")" class="btn btn-warning" style="padding: 15px 40px; font-size: 12pt;">Batal</a>
                <input type="submit" value="Simpan" class="btn btn-primary" style="padding: 15px 30px; font-size: 12pt;" />
            </span>
        </div>
    </div>
}

<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
