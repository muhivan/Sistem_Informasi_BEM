@model Sistem_Informasi_BEM.Models.trlaporanksk

@{
    ViewBag.Title = "Edit";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/polman/bootstrap-select.min.css" rel="stylesheet" />
    <link href="~/Content/polman/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/polman/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/polman/jquery.fancybox.css" rel="stylesheet" />
    <link href="~/Content/polman/Style.css" rel="stylesheet" />
</head>
<body class="scrollstyle2">

    <div class="polman-nav-static-top">
        <div class="float-left polman-adjust4">
            <div id="iconmenu" class="fa fa-bars fa-2x polman-adjust2" style="margin-right: 15px; cursor: pointer;" aria-hidden="true" onclick="hidemenu();"></div>
            <img src="~/Picture/SIBEM.png" style="height: 50px;" />
        </div>
        <div class="polman-menu">
            <nav class="nav justify-content-end" style="padding-top: 0px;">
                <div class="fa fa-user-circle-o fa-10x" style="margin-top: 8px; margin-right: 15px; cursor: pointer;" aria-hidden="true"></div>
                <b style="font-size: 18px; float: right">@(Request.IsAuthenticated? HttpContext.Current.User.Identity.Name : "") (@ViewBag.Jabatan) <br />@ViewBag.Departemen </b>
            </nav>
        </div>
    </div>

    <div class="polman-nav-static-right collapse scrollstyle" id="menu">
        <div id="accordion" role="tablist" aria-multiselectable="true">
            <div class="list-group">
                <a onclick="location.href='@Url.Action("Index", "Login")'" class="list-group-item list-group-item-action" style="border-radius: 0px; border: none; padding-left: 23px;"><i class="fa fa-sign-out fa-lg fa-pull-left"></i>Logout</a>
                <a onclick="location.href='@Url.Action("MenuBPH","Login")'" class="list-group-item list-group-item-action" style="border-radius: 0px;border: none;padding-left: 23px;"><i class="fa fa-home fa-lg fa-pull-left"></i>Dashboard</a>
                <a href='#menu7' role='tab' class='list-group-item list-group-item-action polman-menu-active' data-toggle='collapse' data-parent='#accordion' aria-expanded='true' aria-controls='menu7' style="border-radius: 0px; border: none; padding-left: 23px;"><i class='fa fa-chevron-down fa-lg fa-pull-left'></i>Menu</a>
                <div id='menu7' class='collapse in' role='tabpanel'>
                    <a onclick="location.href='@Url.Action("Index","OSP")'" class="list-group-item list-group-item-action active" style="border-radius: 0px; border: none; padding-left: 47px; display: inherit;">
                        <b class='fa fa-file-excel-o fa-lg fa-pull-left'>&nbsp;&nbsp;</b>Pengajuan OSP
                    </a>
                    <a onclick="location.href='@Url.Action("IndexDept","PengajuanDana")'" class="list-group-item list-group-item-action" style="border-radius: 0px; border: none; padding-left: 47px; display: inherit;">
                        <b class='fa fa-file-text-o fa-lg fa-pull-left'>&nbsp;&nbsp;</b>Pengajuan Dana
                    </a>
                    <a onclick="location.href='@Url.Action("Index", "KasBPH")'" class="list-group-item list-group-item-action " style="border-radius: 0px; border: none; padding-left: 47px; display: inherit;">
                        <b class='fa fa-money fa-lg fa-pull-left'>&nbsp;&nbsp;</b>Kas
                    </a>
                </div>
            </div>
         </div>
    </div>

    @using (Html.BeginForm("Edit", "OSP", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div id="allcontent" class="polman-adjust5" style="margin-left: 0px;">
            <div id="MainContent_panelAdd">
                <div class="card">
                    <div class="card-header">
                        <span id="MainContent_labelTitleAdd" style="font-weight:bold;">Ubah Data Pengajuan</span>
                    </div>
                    <div class="card-block">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    @Html.HiddenFor(model => model.idlpksk)
                                    <label style="font-weight: bold;" >Komentar <b style="color: red">*</b></label>
                                    <br />
                                    @Html.EditorFor(model => model.komentar, new { htmlAttributes = new { @class = "form-control", @style = "min-width: 100%; height:150px; font-size: 15pt;" } })
                                    @Html.ValidationMessageFor(model => model.komentar, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label style="font-weight: bold;" for="addNamaKegiatanENG">Tanggal Present <b style="color: red">*</b></label>
                                    @Html.EditorFor(model => model.tglpresent, new { htmlAttributes = new { @class = "form-control", @style = "min-width: 100%; height:50px; font-size: 15pt;" } })
                                    @Html.ValidationMessageFor(model => model.tglpresent, "", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.modiby, new { @class = "form-control", @Value = Request.IsAuthenticated ? HttpContext.Current.User.Identity.Name : "" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label style="font-weight: bold;">Berkas Pengajuan<b style="color: red">*</b></label>
                                    <input type="file" name="files" id="files" multiple="multiple" value="@Html.DisplayFor(model => model.namaberkas)" class="btn btn-info" style="min-width:100%; height:45px; padding: 10px 10px; font-size: 12pt;" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <br />
                <a href="@Url.Action("Index", "OSP", "")" class="btn btn-secondary" style="padding: 15px 40px; font-size: 12pt;">Kembali</a>
                <input type="submit" value="Simpan" class="btn btn-primary" style="padding: 15px 40px; font-size: 12pt;" />
            </div>
        </div>
    }


    @if (ViewBag.Message != null)
    {
        <script type="text/javascript">
            window.onload = function () {
            alert("@ViewBag.Message");
        }
        </script>
    }

    <script src="~/Content/theme/designtablejava.js"></script>
    <link href="~/Content/designtable.css" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Content/polman/bootstrap-select.min.js"></script>
    <script src="~/Content/polman/bootstrap.min.js"></script>
    <script src="~/Content/polman/exporting.js"></script>
    <script src="~/Content/polman/highcharts-more.js"></script>
    <script src="~/Content/polman/highcharts.js"></script>
    <script src="~/Content/polman/jquery-ui-1.12.1.min.js"></script>
    <script src="~/Content/polman/jquery.3.2.1.min.js"></script>
    <script src="~/Content/polman/jquery.fancybox.pack.js"></script>
    <script src="~/Content/polman/jquery.floatThead.js"></script>
    <script src="~/Content/polman/LetterAvatar.js"></script>
    <script src="~/Content/polman/solid-gauge.js"></script>
    <script src="~/Content/polman/tether.min.js"></script>
    <script src="~/Content/polman/tinymce.min.js"></script>
</body>
</html>


