<H3>Pengajuan Dana</H3>
<ol class="breadcrumb polman-breadcrumb">
    <li class="breadcrumb-item"><a onclick="location.href='@Url.Action("MenuPIC","Login")'">Sistem Informasi BEM</a></li>
    <li class="breadcrumb-item"><a onclick="location.href='@Url.Action("Index","PengajuanDana")'">Pengajuan Dana</a></li>
    <li class="breadcrumb-item">Tambah</li>
</ol>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div id="allcontent" class="polman-adjust5" style="margin-left: 0px;">
        <div id="MainContent_panelAdd">
            <div class="card">
                <div class="card-header"></div>
                <div class="card-block">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                @Html.HiddenFor(model => model.idanggota, new { @class = "form-control", @Value = ViewBag.idanggota2 })
                                <label style="font-weight: bold;" for="addNamaKegiatanENG">Event <b style="color: red">*</b></label>
                                @Html.EditorFor(model => model.@event, new { htmlAttributes = new { @class = "form-control", @style = "min-width: 100%; height:50px; font-size: 15pt;" } })
                                @Html.ValidationMessageFor(model => model.@event, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.creaby, new { @class = "form-control", @Value = Request.IsAuthenticated ? HttpContext.Current.User.Identity.Name : "" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label style="font-weight: bold;">Tujuan <b style="color: red">*</b></label>
                                @Html.EditorFor(model => model.tujuan, new { htmlAttributes = new { @class = "form-control", @style = "min-width: 100%; height:50px; font-size: 15pt;" } })
                                @Html.ValidationMessageFor(model => model.tujuan, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label style="font-weight: bold;">Jumlah <b style="color: red">*</b></label>
                                @Html.EditorFor(model => model.jumlah, new { htmlAttributes = new { @class = "form-control", @style = "min-width: 100%; height:50px; font-size: 15pt;" } })
                                @Html.ValidationMessageFor(model => model.jumlah, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label style="font-weight: bold;">Jenis Pengajuan Dana<b style="color: red">*</b></label>
                                <br />
                                @Html.RadioButtonFor(model => model.kepada, "Departemen", new { htmlAttributes = new { @class = "form-control" } })
                                Departemen
                                <br />
                                @Html.RadioButtonFor(model => model.kepada, "BEM", new { htmlAttributes = new { @class = "form-control" } })
                                BEM
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <a href="@Url.Action("Index", "PengajuanDana", "")" class="btn btn-default" style="padding: 15px 40px; font-size: 12pt;">Kembali</a>
            <input type="submit" value="Simpan" class="btn btn-primary" style="padding: 15px 40px; font-size: 12pt;" />
        </div>
    </div>
}

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
            window.onload = function () {
            alert("@ViewBag.Message");
        }
    </script>
}

