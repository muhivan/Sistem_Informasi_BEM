<H3>Pengajuan Dana</H3>
<ol class="breadcrumb polman-breadcrumb">
    <li class="breadcrumb-item"><a onclick="location.href='@Url.Action("MenuBPH","Login")'">Sistem Informasi BEM</a></li>
    <li class="breadcrumb-item"><a onclick="location.href='@Url.Action("IndexDept","PengajuanDana")'">Pengajuan Dana</a></li>
</ol>
<hr />

<a href="@Url.Action("Create", "PengajuanDana", "")" class="btn btn-success" style="padding: 10px 25px;"><i class='fa fa-plus'>&nbsp;&nbsp;</i>Tambah Baru</a>
<br />
<br />

<table class="table table-striped table-bordered" style="width:100%" id="tbldana">
    <thead>
        <tr>
            <th>
                Nama
            </th>
            <th>
                Event
            </th>
            <th>
                Tujuan
            </th>
            <th>
                Jumlah
            </th>
            <th>
                Status
            </th>
            <th>Aksi</th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        if (item.status == 0)
        {
            status = "Dibatalkan";
        }
        else if (item.status == 1)
        {
            status = "Diproses Departemen";
        }
        else if (item.status == 2)
        {
            status = "Diproses BPH UMUM";
        }
        else if (item.status == 3)
        {
            status = "Ditolak";
        }
        else if (item.status == 4)
        {
            status = "Diterima";
        }
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.msanggotabem.nama)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.@event)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tujuan)
            </td>
            <td>
                Rp. @Html.DisplayFor(modelItem => item.jumlah),00
            </td>
            <td>
                @status
            </td>
            <td>
                @if (item.status == 3 || item.status == 4 || item.status == 0)
                {
                    <a onclick="return confirm('Konfirmasi Persetujuan Pengajuan Dana');" href="@Url.Action("EditTerima", "PengajuanDana", new { id = item.id })" class="btn btn-success" style="cursor: not-allowed; pointer-events: none;"><i class='fa fa-check-circle'></i>&nbsp;Terima</a>
                    <a onclick="return confirm('Konfirmasi Penolakan Pengajuan Dana');" href="@Url.Action("EditTolak", "PengajuanDana", new { id = item.id })" class="btn btn-danger" style="cursor: not-allowed; pointer-events: none;"><i class='fa fa-remove'></i>&nbsp;Tolak</a>
                }
                else
                {
                    <a onclick="return confirm('Konfirmasi Persetujuan Pengajuan Dana');" href="@Url.Action("EditTerima", "PengajuanDana", new { id = item.id })" class="btn btn-success" style="padding: 8px 30px;"><i class='fa fa-check-circle'></i>&nbsp;Terima</a>
                    <a onclick="return confirm('Konfirmasi Penolakan Pengajuan Dana');" href="@Url.Action("EditTolak", "PengajuanDana", new { id = item.id })" class="btn btn-danger" style="padding: 8px 30px;"><i class='fa fa-remove'></i>&nbsp;Tolak</a>
                }
            </td>
        </tr>
    }

</table>

