@model Sistem_Informasi_BEM.Models.trpengajuandana

@{
    ViewBag.Title = "Details Data";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/polman/bootstrap-select.min.css" rel="stylesheet" />
    <link href="~/Content/polman/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/polman/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/polman/jquery.fancybox.css" rel="stylesheet" />
    <link href="~/Content/polman/Style.css" rel="stylesheet" />
</head>
<body class="scrollstyle2">

    <div class="polman-nav-static-top">
        <div class="float-left polman-adjust4">
            <div id="iconmenu" class="fa fa-bars fa-2x polman-adjust2" style="margin-right: 15px; cursor: pointer;" aria-hidden="true" onclick="hidemenu();"></div>
            <img src="~/Picture/SIBEM.png" style="height: 50px;" />
        </div>
        <div class="polman-menu">
            <nav class="nav justify-content-end" style="padding-top: 0px;">
                <div class="fa fa-user-circle-o fa-10x" style="margin-top: 8px; margin-right: 15px; cursor: pointer;" aria-hidden="true"></div>
                <b style="font-size: 18px; float: right">@(Request.IsAuthenticated? HttpContext.Current.User.Identity.Name : "") (@ViewBag.Jabatan) <br />@ViewBag.Departemen </b>
            </nav>
        </div>
    </div>

    <div class="polman-nav-static-right collapse scrollstyle" id="menu">
        <div id="accordion" role="tablist" aria-multiselectable="true">
            <div class="list-group">
                <a onclick="location.href='@Url.Action("Index", "Login")'" class="list-group-item list-group-item-action" style="border-radius: 0px; border: none; padding-left: 23px;"><i class="fa fa-sign-out fa-lg fa-pull-left"></i>Logout</a>
                <a onclick="location.href='@Url.Action("MenuPIC","Login")'" class="list-group-item list-group-item-action" style="border-radius: 0px; border: none; padding-left: 23px;"><i class="fa fa-home fa-lg fa-pull-left"></i>Dashboard</a>
                <a href='#menu7' role='tab' class='list-group-item list-group-item-action polman-menu-active' data-toggle='collapse' data-parent='#accordion' aria-expanded='true' aria-controls='menu7' style="border-radius: 0px; border: none; padding-left: 23px;"><i class='fa fa-chevron-down fa-lg fa-pull-left'></i>Menu</a>
                <div id='menu7' class='collapse in' role='tabpanel'>
                    <a onclick="location.href='@Url.Action("Index","PengajuanOSP")'" class="list-group-item list-group-item-action " style="border-radius: 0px; border: none; padding-left: 47px; display: inherit;">
                        <b class='fa fa-file-excel-o fa-lg fa-pull-left'>&nbsp;&nbsp;</b>Pengajuan OSP
                    </a>
                    <a onclick="location.href='@Url.Action("Index","PengajuanDana")'" class="list-group-item list-group-item-action active" style="border-radius: 0px; border: none; padding-left: 47px; display: inherit;">
                        <b class="fa fa-file-text-o fa-lg fa-pull-left">&nbsp;&nbsp;</b>Pengajuan Dana
                    </a>
                    <a onclick="location.href='@Url.Action("Index", "Kas")'" class="list-group-item list-group-item-action" style="border-radius: 0px; border: none; padding-left: 47px; display: inherit;">
                        <b class='fa fa-money fa-lg fa-pull-left'>&nbsp;</b>Kas
                    </a>
                </div>
            </div>
        </div>
    </div>

    <ol class="breadcrumb polman-breadcrumb">
        <li class="breadcrumb-item"><a href="" data-toggle="tooltip" data-placement="bottom">Sistem Informasi BEM</a></li>
        <li class="breadcrumb-item">Pengajuan Dana</li>
        <li class="breadcrumb-item">Details</li>
    </ol>
    <hr />

    <div id="allcontent" class="polman-adjust5" style="margin-left: 0px;">
        <div id="MainContent_panelAdd">
            <div class="card">
                <div class="card-header">
                    <span id="MainContent_labelTitleAdd" style="font-weight:bold;">Detail Data  @Html.DisplayFor(model => model.@event)</span>
                </div>
                <div class="card-block">
                    <div class="row">
                        <div class="col-lg-6">
                            <table class="table table-striped table-bordered" style="width:80%">
                                <tr><td>Nama</td><td> : </td><td>@Html.DisplayFor(model => model.msanggotabem.nama)</td></tr>
                                <tr><td>Tujuan</td><td> : </td><td> @Html.DisplayFor(model => model.tujuan)</td></tr>
                                <tr><td>Nominal</td><td> : </td><td> @Html.DisplayFor(model => model.jumlah)</td></tr>
                                <tr><td>Jenis Pengajuan Dana</td><td> : </td><td> @Html.DisplayFor(model => model.kepada)</td></tr>
                                <tr><td>CreaBy</td><td> : </td><td> @Html.DisplayFor(model => model.creaby)</td></tr>
                                <tr><td>ModiBy</td><td> : </td><td>@Html.DisplayFor(model => model.modiby)</td></tr>
                                <tr><td>CreaDate</td><td> : </td><td>@Html.DisplayFor(model => model.creadate)</td></tr>
                                <tr><td>ModiDate</td><td> : </td><td>@Html.DisplayFor(model => model.modidate)</td></tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <a href="@Url.Action("Index", "PengajuanDana", "")" class="btn btn-secondary" style="padding: 15px 40px; font-size: 12pt;">Kembali</a>

    <script src="~/Content/theme/designtablejava.js"></script>
    <link href="~/Content/designtable.css" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Content/polman/bootstrap-select.min.js"></script>
    <script src="~/Content/polman/bootstrap.min.js"></script>
    <script src="~/Content/polman/exporting.js"></script>
    <script src="~/Content/polman/highcharts-more.js"></script>
    <script src="~/Content/polman/highcharts.js"></script>
    <script src="~/Content/polman/jquery-ui-1.12.1.min.js"></script>
    <script src="~/Content/polman/jquery.3.2.1.min.js"></script>
    <script src="~/Content/polman/jquery.fancybox.pack.js"></script>
    <script src="~/Content/polman/jquery.floatThead.js"></script>
    <script src="~/Content/polman/LetterAvatar.js"></script>
    <script src="~/Content/polman/solid-gauge.js"></script>
    <script src="~/Content/polman/tether.min.js"></script>
    <script src="~/Content/polman/tinymce.min.js"></script>
</body>
</html>
