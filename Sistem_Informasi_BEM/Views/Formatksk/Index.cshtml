<H3>Format Kesekretariatan</H3>
<ol class="breadcrumb polman-breadcrumb">
    <li class="breadcrumb-item"><a onclick="location.href='@Url.Action("MenuAdmin","Login")'">Sistem Informasi BEM</a></li>
    <li class="breadcrumb-item">Format Kesekretariatan</li>
</ol>
<hr />

<p>
    <a href="@Url.Action("Create", "Formatksk", "")" class="btn btn-success" style="padding: 10px 25px;"><i class='fa fa-plus'>&nbsp;&nbsp;</i>Tambah Baru</a>
    <span style="float: right">
        @if (ViewBag.status == 1)
        {
            <a href="@Url.Action("Index", "Formatksk", new { id = 1 })" class="btn btn-info" style="padding: 8px 30px;">Aktif</a>
            <a href="@Url.Action("Index", "Formatksk", new { id = 0 })" class="btn btn-default" style="padding: 8px 12px;">Tidak aktif</a>
        }
        else
        {
            <a href="@Url.Action("Index", "Formatksk", new { id = 1 })" class="btn btn-default" style="padding: 8px 30px;">Aktif</a>
            <a href="@Url.Action("Index", "Formatksk", new { id = 0 })" class="btn btn-info" style="padding: 8px 12px;">Tidak aktif</a>
        }
    </span>
</p>

<table class="table table-striped table-bordered" style="width:100%" id="tblformat">
    <thead>
        <tr>
            <th>
                No
            </th>
            <th>
                Nama
            </th>
            <th>
                Berkas
            </th>
            <th>
                Status
            </th>
            <th>Aksi</th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        no++;
        if (item.status == 0)
        {
            status = "Tidak Aktif";
        }
        else
        {
            status = " Aktif";
        }
        <tr>
            <td style="width: 50px;">
                @no
            </td>
            <td style="width: 250px;">
                @Html.DisplayFor(modelItem => item.nama)
            </td>
            <td style="width: 350px;">
                @Html.ActionLink(item.dataBerkas, "Download", new { fileName = item.dataBerkas })
            </td>
            <td style="width: 100px;">
                @status
            </td>
            <td style="width: 250px;" align="center">
                <a href="@Url.Action("Edit", "Formatksk", new { id = item.idftksk })" class="btn btn-primary"><i class='fa fa-edit'></i>&nbsp;Ubah</a>
                <a href="@Url.Action("Details", "Formatksk", new { id = item.idftksk })" class="btn btn-warning"><i class='fa fa-list'></i>&nbsp;Detail</a>
                <a onclick="return confirm('Yakin ingin Menghapus Data');" href="@Url.Action("Delete", "Formatksk", new { id = item.idftksk })" class="btn btn-danger"><i class='fa fa-trash'></i>&nbsp;Hapus</a>
            </td>
        </tr>
    }

</table>

