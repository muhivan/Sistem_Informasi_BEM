<H3>Berita BEM</H3>
<ol class="breadcrumb polman-breadcrumb">
    <li class="breadcrumb-item"><a onclick="location.href='@Url.Action("MenuAdmin","Login")'">Sistem Informasi BEM</a></li>
    <li class="breadcrumb-item"><a onclick="location.href='@Url.Action("Index","News")'">Berita Bem</a></li>
</ol>
<hr />

<p>
    <a href="@Url.Action("Create", "News", "")" class="btn btn-success" style="padding: 10px 25px;"><i class='fa fa-plus'>&nbsp;&nbsp;</i>Tambah Baru</a>
    <span style="float: right">
        @if (ViewBag.status == 1)
        {
            <a href="@Url.Action("Index", "News", new { id = 1 })" class="btn btn-info" style="padding: 8px 30px;">Aktif</a>
            <a href="@Url.Action("Index", "News", new { id = 0 })" class="btn btn-default" style="padding: 8px 12px;">Tidak aktif</a>
        }
        else
        {
            <a href="@Url.Action("Index", "News", new { id = 1 })" class="btn btn-default" style="padding: 8px 30px;">Aktif</a>
            <a href="@Url.Action("Index", "News", new { id = 0 })" class="btn btn-info" style="padding: 8px 12px;">Tidak aktif</a>
        }
    </span>
</p>

<table class="table table-striped table-bordered" style="width:100%" id="tblnews">
    <thead>
        <tr>
            <th>
                Judul
            </th>
            <th>
                Preview
            </th>
            <th>
                Deskripsi
            </th>
            <th>
                Gambar
            </th>
            <th>Aksi</th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td style="height: 50px; width: 150px;">
                @Html.DisplayFor(modelItem => item.judul)
            </td>
            <td style="height: 50px; width: 200px;">
                @Html.DisplayFor(modelItem => item.preview)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.deskripsi)
            </td>
            <td style="height: 100px; width: 150px;">
                @if (item.gambar != "")
                {
                    <img src="@Url.Content(item.gambar)" height="100" width="150" />
                }
            </td>
            <td style="height: 50px; width: 50px;">
                <a href="@Url.Action("Edit", "News", new { id = item.idnews })" class="btn btn-primary" style="padding: 8px 27px;"><i class='fa fa-edit'></i>&nbsp;Ubah</a><br /><br />
                <a href="@Url.Action("Details", "News", new { id = item.idnews })" class="btn btn-warning" style="padding: 8px 30px;"><i class='fa fa-book'></i>&nbsp;Detil</a><br /><br />
                <a onclick="return confirm('Yakin ingin Menghapus Data');" href="@Url.Action("Delete", "News", new { id = item.idnews })" class="btn btn-danger" style="padding: 8px 25px;"><i class='fa fa-trash'></i>&nbsp;Hapus</a>
            </td>
        </tr>
    }
</table>

<link href="~/Content/designtable.css" rel="stylesheet" />
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />

@section scripts{
    <script src="~/Content/theme/designtablejava.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap.min.js"></script>

    <script>
        var Popup, dataTable;
        var no;
        $(document).ready(function () {
            $(document).ready(function () {
                dataTable = $("#tblnews").DataTable();
            });
        });
    </script>
}